{
    "include": ["src"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "node16",
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "noUnusedLocals": true,
        "esModuleInterop": true
    }
}
