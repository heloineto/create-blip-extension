{
    "name": "create-blip-extension",
    "description": "CLI tool for creating extensions for the Blip platform",
    "version": "0.0.3",
    "scripts": {
        "build": "tsc",
        "start": "node ./index.js",
        "fetch-templates": "node scripts/fetch-templates.cjs",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "kolorist": "^1.8.0",
        "minimist": "^1.2.8",
        "prompts": "^2.4.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/minimist": "^1.2.2",
        "@types/node": "^18.15.13",
        "@types/prompts": "^2.4.4",
        "@vitest/coverage-c8": "^0.30.1",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "typescript": "^5.0.4",
        "vitest": "^0.30.1"
    },
    "type": "module",
    "main": "index.js",
    "author": "Heloi Neto",
    "license": "MIT",
    "bin": {
        "create-blip-extension": "index.js",
        "cbe": "index.js"
    },
    "files": [
        "index.js",
        "template-*/**/*",
        "dist"
    ],
    "engines": {
        "node": "^14.18.0 || >=16.0.0"
    },
    "homepage": "https://github.com/heloineto/create-blip-extension#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/heloineto/create-blip-extension.git"
    },
    "bugs": {
        "url": "https://github.com/heloineto/create-blip-extension/issues"
    }
}
